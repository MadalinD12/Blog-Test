<div class="author">
    <h1 class="author_heading">Salut, eu sunt Madalin!</h1>
    <p class="author_body">Student si pasionat de programare.</p>

</div>
<img src="/img/hero-image.webp" alt="Programming" class="hero-image" width="981" height="528">
<section class="articles">
    <h2 class="articles_heading">Ultimele Postari</h2>

    <ul class="article-ul">
        <% data.forEach(post => { %>
        <li>
            <a href="/post/<%= post._id %>">
                <span> <%= post.title %></span>
                <span class="article-list__date"> <%= post.createdAt.toDateString() %></span>
            </a>
        </li>
        <% }) %>
    </ul>
    <% if (nextPage !== null) { %> <a href="/?page=<%= nextPage %>" class="pagination">&lt; Vezi postÄƒri mai vechi</a> <% } %>

    
</section>